#: import Button kivy.uix.button.Button

<logtime>:
    hit1: hit_button1
    hit2: hit_button2
    hit3: hit_button3
    timel1: time_label1
    timel2: time_label2
    timel3: time_label3

    canvas.before:
        Color:
            rgba: [0.8, 0.8, 0.8, 1]
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: hit_button1
        text: app.bt1
        font_size: 36
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: (root.width/6)
        center_y: ((root.height/4)*3)
        on_press: app.time_get(1)
        on_release: app.bt_release(1)

    Button:
        id: hit_button2
        text: app.bt2
        font_size: 36
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: (root.width/2)
        center_y: ((root.height/4)*3)
        on_press: app.time_get(2)
        on_release: app.bt_release(2)

    Button:
        id: hit_button3
        text: app.bt3
        font_size: 36
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: ((root.width/6)*5)
        center_y: ((root.height/4)*3)
        on_press: app.time_get(3)
        on_release: app.bt_release(3)

    Label:
        text: "# Last_Log"
        color: [0.2, 0.70588, 0.56470, 1]
        font_size: 36
        bold: True
        size: root.width/2, root.height/2
        center_x: (root.width/6 + 10)
        center_y: (root.height/2)

    Label:
        id: time_label1
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 36
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: ((root.height/8) * 3)

    Label:
        id: time_label2
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 36
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: (root.height/4)

    Label:
        id: time_label3
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 36
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: (root.height/8)

