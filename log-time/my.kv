#: import Button kivy.uix.button.Button

<logtime>:
    hit1: hit_button1
    hit2: hit_button2
    hit3: hit_button3
    timel1: time_label1
    timel2: time_label2
    timel3: time_label3

    canvas.before:
        Color:
            rgba: [0.85, 0.85, 0.85, 1]
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: hit_button1
        text: "Hit1"
        font_size: 28
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: (root.width/6)
        center_y: ((root.height/4)*3)
        on_press: app.time_get("hit1")
        on_release: app.bt_release()

    Button:
        id: hit_button2
        text: "Hit2"
        font_size: 28
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: (root.width/2)
        center_y: ((root.height/4)*3)
        on_press: app.time_get("hit2")
        on_release: app.bt_release()

    Button:
        id: hit_button3
        text: "Hit3"
        font_size: 28
        color: [0.2, 0.70588, 0.56470, 1]
        background_normal: "Resource/button_normal.png"
        background_down: "Resource/button_down.png"
        border: 0, 0, 0, 0
        size: root.width/4, root.width/4
        center_x: ((root.width/6)*5)
        center_y: ((root.height/4)*3)
        on_press: app.time_get("hit3")
        on_release: app.bt_release()

    Label:
        text: "# Last_Log"
        color: [0.2, 0.70588, 0.56470, 1]
        font_size: 24
        bold: True
        size: root.width/2, root.height/2
        center_x: (root.width/2 - 120)
        center_y: (root.height/4 + 120)

    Label:
        id: time_label1
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 24
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: (root.height/4 + 60)

    Label:
        id: time_label2
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 24
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: (root.height/4)

    Label:
        id: time_label3
        text: "*  Last_Log"
        color: [0.2117, 0.23529, 0.36470, 1]
        font_size: 24
        size: root.width/2, root.height/2
        center_x: (root.width/2)
        center_y: (root.height/4 - 60)

